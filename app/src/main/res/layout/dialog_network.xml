<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 네트워크 오류 메시지 -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/network_error_text_padding_horizontal"
            android:paddingVertical="@dimen/network_error_text_padding_vertical"
            android:text="@string/network_error"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <!-- 구분선 -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="@dimen/network_border" />

        <!-- 재시도 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/network_retry" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>